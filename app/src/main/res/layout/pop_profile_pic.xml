<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profilePicPopConst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnUploadImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/profilePicPop"
            app:layout_constraintTop_toBottomOf="@+id/profilePicPop"
            app:srcCompat="@drawable/btn_upload_image" />


        <ImageView
            android:id="@+id/profilePicPop"
            android:layout_width="295dp"
            android:layout_height="286dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>