<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.example.dnaire.sections_profileDrawer.PicNameQuotes
    android:id="@+id/picNameQuotesConst"
    android:layout_width="240dp"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/drawerProfilePic"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_profile" />

        <ImageView
            android:id="@+id/picContainer"
            android:layout_width="224dp"
            android:layout_height="225dp"
            app:layout_constraintBottom_toBottomOf="@+id/drawerProfilePic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/drawerProfilePic"
            app:srcCompat="@drawable/transparent" />

        <ImageView
            android:id="@+id/namePlate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drawerProfilePic"
            app:srcCompat="@drawable/name_plate" />

    <TextView
        android:id="@+id/usernameText"
        style="@style/dnaireText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeriAce"
        app:layout_constraintBottom_toBottomOf="@+id/namePlate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/namePlate"
            app:layout_constraintTop_toBottomOf="@+id/drawerProfilePic" />
    </com.example.dnaire.sections_profileDrawer.PicNameQuotes>
</layout>